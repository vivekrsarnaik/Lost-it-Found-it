<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="15dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="417dp"
        android:layout_height="91dp"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/spinner_background"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/itemStatusTextView"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="9dp"
        android:text="Item Status"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemDetailsBtn"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:paddingVertical="6dp"
        android:text="Item Status -->"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemNameTextView"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/itemDetailsBtn"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#03A9F4"
        android:padding="2dp"
        android:text="View"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/itemNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/reportDateTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="258dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:text="Item Name"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reportDateTextView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:paddingVertical="5dp"
        android:text="Report Date"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/itemNameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229" />

</android.support.constraint.ConstraintLayout>
